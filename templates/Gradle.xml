<templateSet group="Gradle">
  <template name="ir" value="def retrofit2_version = &quot;$retrofit2_version$&quot;&#10;implementation &quot;com.squareup.retrofit2:retrofit:$retrofit2_version&quot;" description="Add retrofit2 as a dependency" toReformat="false" toShortenFQNames="true">
    <variable name="retrofit2_version" expression="" defaultValue="&quot;2.4.0&quot;" alwaysStopAt="true" />
    <context>
      <option name="GROOVY_STATEMENT" value="true" />
    </context>
  </template>
  <template name="archive" value="setProperty(&quot;archivesBaseName&quot;, applicationId + &quot;-v&quot; + versionCode + &quot;(&quot; + versionName + &quot;)&quot;)&#10;" description="Filename for Android's archive" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="GROOVY_STATEMENT" value="true" />
    </context>
  </template>
</templateSet>